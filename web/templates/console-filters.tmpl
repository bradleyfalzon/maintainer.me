{{ template "console-header" . }}

<h1>Filters</h1>

<p>Use filters to keep or discard events that don't interest you.</p>

<div>
	<fieldset class="form-group row">
		<legend class="col-form-legend col-sm-2">Default Action</legend>
		<div class="col-sm-10">
			<div class="form-check">
				<label class="form-check-label">
					<input class="form-check-input" type="radio" name="gridRadios" id="gridRadios2" value="option2" checked>
					Discard event
				</label>
			</div>
			<div class="form-check disabled">
				<label class="form-check-label">
					<input class="form-check-input" type="radio" name="gridRadios" id="gridRadios3" value="option3" disabled="">
					Keep event
				</label>
			</div>
		</div>
	</fieldset>
</div>

<style>
.filter {
    border: 1px solid #d7d7d7;
    padding: 0.5em;
    margin-bottom: 0.5em;
}

.filter .conditions {
    margin-bottom: 0;
}

.filter .condition:last-child .and { display: none; } /* Remove last "and" from list of conditions */

.or { margin-bottom: 0.5em; }

.filters>.or:last-child {
    display: none;
}
</style>

<div class="filters">
    {{ range .Filters }}
        <div class="filter">
            <div class="row">
				<div class="col-2 text-center align-self-center">
                    <a href="/console/filters/{{ .ID }}">Edit</a>
				</div>
                <div class="col-8">
                    <ol class="conditions">
                        {{ range .Conditions }}
                            <li class="condition">{{ .String }}<span class="text-muted and">; and</span></li>
                        {{ end }}
                    </ol>
                </div>
                <div class="col-2 text-center align-self-center">
                    {{ if .OnMatchDiscard }}
                        <div class="bg-danger text-white">Discard Event</div>
                    {{ else }}
                        <div class="bg-success text-white">Accept Event</div>
                    {{ end }}
                </div>
            </div>
        </div>

        <div class="or text-muted text-center">- or -</div>
    {{ end }}
</div>

{{ template "console-footer" . }}
